<configuration>
    <!-- NameNode directory for metadata and namespace image -->
    <property>
    <name>dfs.namenode.name.dir</name>
    <value>file:///opt/hadoop/data/dfs/name</value>
    </property>

    <!-- DataNode directory for block storage -->
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:///opt/hadoop/data/dfs/data</value>
    </property>

    <!-- Default block replication factor -->
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>

    <!-- Permissions settings (optional, useful for initial setup) -->
    <property>
        <name>dfs.permissions</name>
        <value>false</value>
    </property>

    <!-- Address on which the NameNode Web UI listens -->
    <property>
        <name>dfs.namenode.http-address</name>
        <value>0.0.0.0:9870</value>
    </property>

    <!-- Address on which the DataNode Web UI listens -->
    <property>
        <name>dfs.datanode.http.address</name>
        <value>0.0.0.0:9864</value>
    </property>
</configuration>
